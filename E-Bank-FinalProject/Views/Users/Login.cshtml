@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}


<div class="row justify-content-center mt-1">
    <div class="col-6 ">
        <h3>Log in:</h3>
    </div>
 
</div>

<div class="row justify-content-center ">
    
    <div class="col-6">
        
     <form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
        <div class="row justify-content-center">
       <hr />
         <div class="form-group">
                <label class="w-100 m-1">Email:</label>
                <input class="form-control w-100" type="text" name="email" placeholder="Email" />     
            </div>
            </div>
         <div class="row justify-content-center">
      <div class="form-group">
                <label  class="w-100 m-1">Password:</label>
                <input class="form-control w-100" type="password" name="password" placeholder="Password" />     
            </div>        
            </div>   
            <div class="form-group mt-4">
                <input type="submit" value="Login" class="btn btn-dark w-100" />
            </div>
        </form>
    </div>
</div>

 






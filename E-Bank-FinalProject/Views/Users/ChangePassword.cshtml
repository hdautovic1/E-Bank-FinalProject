@model E_Bank_FinalProject.Data.ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<link rel="stylesheet" href="~/css/side.css" asp-append-version="true" />

<div class="wrapper">
    <nav id="sidebar" class="px-3">
        <ul class="list-unstyled components">
            <li>
                <a asp-controller="Users" asp-action="MyProfile">My profile</a>
            </li>
            <li>
                <a asp-controller="Accounts" asp-action="Index">Accounts</a>
            </li>
            <li>
                <a asp-controller="CreditCards" asp-action="Index">Credit cards</a>
            </li>
        </ul>
    </nav>
    <!-- Page Content  -->
    <div id="content" class="bg-light px-4">
        <h3 class="pt-3">Change password:</h3>
        <hr />
        <div class="row">
            <div class="col-6">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row justify-content-center">
                        <div class="form-group">
                            <label asp-for="CurrentPassword" class="control-label m-1"></label>:
                            <input asp-for="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="form-group col">
                            <label asp-for="NewPassword" class="control-label m-1"></label>:
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="form-group col">
                            <label asp-for="ConfirmNewPassword" class="control-label m-1"></label>:
                            <input asp-for="ConfirmNewPassword" class="form-control" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-4">
                        <input type="submit" value="Change password" class="btn btn-dark w-100" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

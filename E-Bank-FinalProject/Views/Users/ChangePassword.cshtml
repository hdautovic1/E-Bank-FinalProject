@{
    ViewData["Title"] = "Change password";
}
<link rel="stylesheet" href="~/css/side.css" asp-append-version="true" />

<div class="wrapper">
    <nav id="sidebar" class="px-3">
        <ul class="list-unstyled components">
            <li>
                <a asp-controller="Users" asp-action="MyProfile">My profile</a>                        
            </li>
             <li>
                <a asp-controller="Accounts" asp-action="Index">Accounts</a>                        
            </li>
        </ul>       
    </nav>

    <!-- Page Content  -->
    <div id="content" class="bg-light px-4">
    


  <h3 class="pt-3">Change password:</h3>
  
    <hr />
     

<div class="row">
    
    <div class="col-6">
        
     <form action="/changepassword" method="post">
        <div class="row justify-content-center">
         <div class="form-group">
                <label class="w-100 m-1">Old password:</label>
                <input class="form-control w-100" type="password" name="oldPassword" placeholder="Old password" />     
            </div>
            </div>
         <div class="row justify-content-center">
            <div class="form-group">
                <label  class="w-100 m-1">New password:</label>
                <input class="form-control w-100" type="password" name="newPassword" placeholder="New password" />     
            </div>        
            </div>  
            <div class="row justify-content-center">
            <div class="form-group">
                <label  class="w-100 m-1">Confirm password:</label>
                <input class="form-control w-100" type="password" name="confirmedPassword" placeholder="Confirm password" />     
            </div>        
            </div>  
            <div class="form-group mt-4">
                <input type="submit" value="Change password" class="btn btn-dark w-100" />
            </div>
        </form>
    </div>
</div>
</div>
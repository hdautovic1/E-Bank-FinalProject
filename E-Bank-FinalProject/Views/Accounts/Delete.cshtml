@model E_Bank_FinalProject.Models.Account

@{
    ViewData["Title"] = "Delete account";
}

<link rel="stylesheet" href="~/css/side.css" asp-append-version="true" />

<div class="wrapper">
    <nav id="sidebar" class="px-3">
        <ul class="list-unstyled components">
            <li>
                <a asp-controller="Users" asp-action="MyProfile">My profile</a>
            </li>
            <li>
                <a asp-controller="Accounts" asp-action="Index">Accounts</a>
            </li>
            <li>
                <a asp-controller="CreditCards" asp-action="Index">Credit cards</a>
            </li>
              <li>
                <a asp-controller="Transactions" asp-action="Index">Transactions</a>
            </li>
        </ul>
    </nav>
    <!-- Page Content  -->
    <div id="content" class="bg-light px-4">
        <h3 class="pt-3">Are you sure you want to delete this account and cards connected to this account?</h3>
        <hr />
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AccountName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AccountName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateCreated)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AccountDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AccountDescription)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.FirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.LastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.LastName)
                </dd>
            </dl>
            <div class="row">
                <form asp-action="Delete" class="col-6">
                    <input type="hidden" asp-for="AccountID" />
                    <input type="submit" value="Delete" class="btn btn-dark w-100" />
                </form>
            </div>
        </div>
    </div>
</div>

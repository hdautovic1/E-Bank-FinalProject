@model E_Bank_FinalProject.Models.Account

@{
    ViewData["Title"] = "Add account";
}
<link rel="stylesheet" href="~/css/side.css" asp-append-version="true" />

<div class="wrapper">
    <nav id="sidebar" class="px-3">
        <ul class="list-unstyled components">
            <li>
                <a asp-controller="Users" asp-action="MyProfile">My profile</a>
            </li>
            <li>
                <a asp-controller="Accounts" asp-action="Index">Accounts</a>
            </li>
            <li>
                <a asp-controller="CreditCards" asp-action="Index">Credit cards</a>
            </li>
             <li>
                <a asp-controller="Transactions" asp-action="Index">Transactions</a>
            </li>
        </ul>
    </nav>
    <!-- Page Content  -->
    <div id="content" class="bg-light px-4">
        <h3 class="pt-3">Add new account: </h3>
        <hr />
        <div class="row">
            <div class="col-6">
                <form asp-action="AddAccount">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AccountName" class="control-label w-100 m-1"></label>
                        <input asp-for="AccountName" class="form-control" />
                        <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccountNumber" class="control-label w-100 m-1"></label>
                        <input asp-for="AccountNumber" class="form-control" />
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccountDescription" class="control-label w-100 m-1"></label>
                        <input asp-for="AccountDescription" class="form-control" />
                        <span asp-validation-for="AccountDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Balance" class="control-label w-100 m-1"></label>
                        <input asp-for="Balance" class="form-control" />
                        <span asp-validation-for="Balance" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <input type="submit" value="Create" class="btn btn-dark w-100" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
     }
    }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Bank_FinalProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Bank_FinalProject.styles.css" asp-append-version="true" />
</head>
<body>

<header> 
     
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/img/ebank.png" width="100" height="50" class="d-inline-block align-top" alt="">
            </a>
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="collapseNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                       <a class="nav-item nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                       <a class="nav-item nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>  
                    <li class="nav-item">
                       <a class="nav-item nav-link text-light" asp-area="" asp-controller="Home" asp-action="ATM">ATM Locations</a>
                    </li>  
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">  
                            <a class="nav-item nav-link text-light" asp-area="" asp-controller="Users" asp-action="Login">Log in</a>
                        </li>  
                        <li class="nav-item">
                            <a class="nav-item nav-link text-light" asp-area="" asp-controller="Users" asp-action="Register">Sign up</a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item">
                       <a class="nav-item nav-link text-light" asp-area="" asp-controller="Users" asp-action="MyProfile">My profile</a>                        
                    </li>
                    <li class="nav-item">
                        <a class="nav-item nav-link text-light" asp-area="" asp-controller="Users" asp-action="Logout">Log out</a>
                    </li>
                    }                
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container w-100 px-0">
        <main role="main" class="w-100 px-0">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="container">
            &copy; 2022 - ebank - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model E_Bank_FinalProject.Models.CreditCard

@{
    ViewData["Title"] = "Delete credit card";
}

<link rel="stylesheet" href="~/css/side.css" asp-append-version="true" />

<div class="wrapper">
    <nav id="sidebar" class="px-3">
        <ul class="list-unstyled components">
             <li>
                <a asp-controller="Accounts" asp-action="Dashboard">Dashboard</a>
            </li>
            <li>
                <a asp-controller="Users" asp-action="MyProfile">My profile</a>
            </li>
            <li>
                <a asp-controller="Accounts" asp-action="Index">Accounts</a>
            </li>
            <li>
                <a asp-controller="CreditCards" asp-action="Index">Credit cards</a>
            </li>
              <li>
                <a asp-controller="Transactions" asp-action="Index">Transactions</a>
            </li>
        </ul>
    </nav>
    <!-- Page Content  -->
    <div id="content" class="bg-light px-4">
        <h3 class="pt-3">Are you sure you want to delete this credit card?</h3>
        <hr />
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreditCardName):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreditCardName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreditCardNumber):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreditCardNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Account):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Account.AccountName)
                </dd>
            </dl>
            <div class="row">
                <form class="col-6" asp-action="Delete">
                    <input type="hidden" asp-for="CreditCardID" />
                    <input type="submit" value="Delete" class="btn btn-dark w-100" />
                </form>
            </div>
        </div>
    </div>
</div>
@model E_Bank_FinalProject.Models.CreditCard

@{
    ViewData["Title"] = "Add credit card";
}

<link rel="stylesheet" href="~/css/side.css" asp-append-version="true" />

<div class="wrapper">
    <nav id="sidebar" class="px-3">
        <ul class="list-unstyled components">
            <li>
                <a asp-controller="Users" asp-action="MyProfile">My profile</a>                        
            </li>
             <li>
                <a asp-controller="Accounts" asp-action="Index">Accounts</a>                        
            </li>
             <li>
                <a asp-controller="CreditCards" asp-action="Index">Credit cards</a>                        
            </li>
        </ul>       
    </nav>

    <!-- Page Content  -->
    <div id="content" class="bg-light px-4">

<h3 class="pt-3">Add new credit card:</h3>

<hr />
<div class="row">
    <div class="col-6">
        <form asp-action="AddCreditCard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreditCardName" class="control-label"></label>
                <input asp-for="CreditCardName" class="form-control" />
                <span asp-validation-for="CreditCardName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="CreditCardNumber" class="control-label"></label>
                <input asp-for="CreditCardNumber" class="form-control" />
                <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountID" class="control-label"></label>
                <select asp-for="AccountID" class ="form-control" asp-items="ViewBag.AccountID"></select>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-dark w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
